<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/mercku_margin_fifteen"
    android:layout_marginEnd="@dimen/mercku_margin_fifteen"
    android:layout_weight="1">

    <ImageView
        android:id="@+id/image_locator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_bg_logo"
        android:src="@drawable/img_m3_blank"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_locator_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_checked"
        app:layout_constraintBottom_toBottomOf="@+id/image_locator"
        app:layout_constraintEnd_toEndOf="@+id/image_locator" />

    <TextView
        android:id="@+id/text_locator"
        style="@style/mercku_TextBlackColorTwelveSp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_locator_checked" />
</androidx.constraintlayout.widget.ConstraintLayout>