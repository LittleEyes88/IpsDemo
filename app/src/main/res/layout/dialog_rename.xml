<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/mercku_margin_twenty">

    <TextView
        android:id="@+id/text_ab_title"
        style="@style/mercku_TextBlackColorSixteenSp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/house_name"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/mercku_margin_twenty"

        android:background="@drawable/edit_text_bg_gray"
        android:maxLength="24"
        android:paddingTop="@dimen/mercku_margin_five"
        android:paddingBottom="@dimen/mercku_margin_five"
        android:text="@string/text_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_ab_title" />

    <TextView
        android:id="@+id/button_cancel"
        style="@style/mercku_TextBlackColorSixteenSp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/mercku_margin_forty"
        android:background="@drawable/mercku_selector_btn_stroke_gray_black"
        android:gravity="center"
        android:onClick="onClickCancel"
        android:text="@string/cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_name" />

    <TextView
        android:id="@+id/button_confirm"
        style="@style/mercku_TextBlackColorSixteenSp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/mercku_margin_forty"
        android:background="@drawable/mercku_selector_btn_stroke_gray_black"
        android:gravity="center"
        android:onClick="onClickConfirm"
        android:text="@string/confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_name" />
</androidx.constraintlayout.widget.ConstraintLayout>