<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/mercku_radius_eight"/>
            <solid android:color="@color/mercku_bg_button_disable"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/mercku_radius_eight"/>
            <solid android:color="@color/mercku_bg_button_red_press"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/mercku_radius_eight"/>
            <solid android:color="@color/mercku_bg_btn_red_solid_normal"/>
        </shape>
    </item>

</selector>