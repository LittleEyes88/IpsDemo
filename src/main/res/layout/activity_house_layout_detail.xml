<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/house_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/mercku_margin_ten"
        app:layout_constraintBottom_toTopOf="@+id/text_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_house"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="matrix"
            android:src="@drawable/img_house_plan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_search"
        style="@style/mercku_TextWhiteColorSixteenSp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mercku_margin_fifty_six"
        android:layout_marginStart="@dimen/mercku_margin_thirty"
        android:layout_marginEnd="@dimen/mercku_margin_thirty"
        android:layout_marginBottom="@dimen/mercku_margin_fifty"
        android:background="@drawable/mercku_selector_btn_solid_gray_black"
        android:gravity="center"
        android:onClick="onClickSearch"
        android:text="@string/search_sticker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

<!--    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/image_loading"
        android:layout_width="@dimen/library_view_width_one_hundred"
        android:layout_height="@dimen/library_view_height_one_hundred"
        android:layout_gravity="center"
        android:src="@drawable/library_anim_mercku_loading"/>-->
</androidx.constraintlayout.widget.ConstraintLayout>